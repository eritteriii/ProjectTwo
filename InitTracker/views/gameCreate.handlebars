<div id="home">
	<div class="container">
		<div class="row">
			<div class="col-8 offset-2">
				<h2>Create A Lobby</h2>
				<form class="clearfix mb-4" action="POST">
					<div class="form-group">
						<label for="game-name-input">Game Name</label>
						<input type="text" id="game-name-input" class="form-control" placeholder="Enter name of your game">
					</div>
					<div class="form-group">
						<label for="campaign-description-input">Campaign Description</label>
						<input class="form-control" id="campaign-description-input" placeholder="Enter description"></input>
					</div>
					<div class="form-group">
						<label for="hosted-by-input">Hosted By</label>
						<input class="form-control" id="hosted-by-input" placeholder="Enter DM name"></input>
					</div>
					<div class="input-group">
						<button id="create-button" class="btn btn-outline-secondary" type="button">Create Game!</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script src="/js/gameCreate.js"></script>

